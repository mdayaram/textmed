   <%= form_for [:admin, @user], :html => { :role => "form" } do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
		</div>

    <div class="form-group">
      <%= f.label :email %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>
    </div>

		<div class="form-group">
      <%= f.label :group %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :group, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
			<%= f.label :phone_number %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :phone_number, class: "form-control" %>
        </div>
      </div>
    </div>


    <% if @user.id == current_user.id %>
      <div class="form-group">
        <%= f.label :password %>
        <div class="row">
          <div class="col-sm-6">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <div class="row">
          <div class="col-sm-6">
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>
      </div>
    <% else %>
      <%= hidden_field_tag "user[password]", @user.password %>
      <%= hidden_field_tag "user[password_confirmation]", @user.password_confirmation %>
    <% end %>
    <%= hidden_field_tag "user[admin]", @user.admin ? 1 : 0 %>
    <%= hidden_field_tag "user[locked]", @user.locked ? 1 : 0 %>


    <div class="row">
      <div class="col-sm-6">
        <%= f.submit "Update", class: "btn btn-warning" %>
      </div>
    </div>
    <% end %>
